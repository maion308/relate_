<%# i found and used this resource how to user simple_forms
from the officials documentation
https://rdoc.info/github/plataformatec/simple_form/master/frames %>

<%= simple_form_for(@post) do |f| %>
<%= f.error_notification %>
<div class="field">
<div class="control">
<%= f.input :post, label: "Post about it", 
input_html: { class: "textarea is-medium is-primary"  }, 
wrapper: false,
label_html: {class: "label"}, 
placeholder: "Post something new..."  %>
</div>
</div>


<%= f.button :submit, 
class: "button has-background-primary has-text-light" %>
<% end %>